            <string>/// Controles de Movimiento

// Comandos de dirección.

der = keyboard_check(vk_right);
izq = keyboard_check(vk_left);
arr = keyboard_check(vk_up);
abj = keyboard_check(vk_down);

// Acción de la gravedad.

if (!place_meeting(x,y+5,objM)) {
t2 = current_time;
tiempo = (t2-t1)/30;
y = y+(grav*tiempo);
}

// Tocar piso.

if (place_meeting(x,y+5,objM)) {
t1 = current_time ;
jump = false;
hvel = 3.2;
}

// Tocar paredes.

if (place_meeting(x+2,y,objM)){
der = false;
}

if (place_meeting(x-1,y,objM)){
izq = false;
}

// Saltar solamente desde una plataforma

if (arr) {
    if (place_meeting(x,y+16,objM)){
    jump = true;
    }
}

// Tocar techo.

if (place_meeting(x,y-hvel,objM)){
hvel = 0;
}

if (jump = true){
    y = y-hvel;
    show_debug_message(y);
}

// Tocar Puerta.

if (place_meeting(x+2,y,objD)){
der = false;
}

if (place_meeting(x-1,y,objD)){
izq = false;
}

// Movimiento Horizontal.

if (der){
x = x+vel
}

if (izq){
x = x-vel
}
